################################################################################
# Get Current AWS Account ID and Region
################################################################################

data "aws_caller_identity" "current" {}

data "aws_region" "current" {}

################################################################################
# Get default VPC
################################################################################

data "aws_vpc" "default" {
  default = true
}

################################################################################
# Get default Subnet IDs
################################################################################

data "aws_subnets" "default" {
  filter {
    name   = "vpc-id"
    values = [data.aws_vpc.default.id]
  }
}
