################################################################################
# Get default VPC
################################################################################

data "aws_vpc" "default" {
  default = true
}

################################################################################
# Get default Subnet IDs
################################################################################

data "aws_subnets" "default" {
  filter {
    name   = "vpc-id"
    values = [data.aws_vpc.default.id]
  }
}


################################################################################
# Get ARN of SNS topic
################################################################################

data "aws_sns_topic" "this" {
  name = var.sns_topic_name
}